%ul.nav-links.search-filter
  - if @project
    %li{ class: active_when(@scope == 'blobs') }
      = link_to search_filter_path(scope: 'blobs') do
        代码
        %span.badge
          = @search_results.blobs_count
    %li{ class: active_when(@scope == 'issues') }
      = link_to search_filter_path(scope: 'issues') do
        问题
        %span.badge
          = @search_results.issues_count
    %li{ class: active_when(@scope == 'merge_requests') }
      = link_to search_filter_path(scope: 'merge_requests') do
        合并请求
        %span.badge
          = @search_results.merge_requests_count
    %li{ class: active_when(@scope == 'milestones') }
      = link_to search_filter_path(scope: 'milestones') do
        里程碑
        %span.badge
          = @search_results.milestones_count
    %li{ class: active_when(@scope == 'notes') }
      = link_to search_filter_path(scope: 'notes') do
        评论
        %span.badge
          = @search_results.notes_count
    %li{ class: active_when(@scope == 'wiki_blobs') }
      = link_to search_filter_path(scope: 'wiki_blobs') do
        维基
        %span.badge
          = @search_results.wiki_blobs_count
    %li{ class: active_when(@scope == 'commits') }
      = link_to search_filter_path(scope: 'commits') do
        提交
        %span.badge
          = @search_results.commits_count

  - elsif @show_snippets
    %li{ class: active_when(@scope == 'snippet_blobs') }
      = link_to search_filter_path(scope: 'snippet_blobs', snippets: true, group_id: nil, project_id: nil) do
        代码片段内容
        %span.badge
          = @search_results.snippet_blobs_count
    %li{ class: active_when(@scope == 'snippet_titles') }
      = link_to search_filter_path(scope: 'snippet_titles', snippets: true, group_id: nil, project_id: nil) do
        标题和文件名
        %span.badge
          = @search_results.snippet_titles_count

  - else
    %li{ class: active_when(@scope == 'projects') }
      = link_to search_filter_path(scope: 'projects') do
        项目
        %span.badge
          = @search_results.projects_count
    %li{ class: active_when(@scope == 'issues') }
      = link_to search_filter_path(scope: 'issues') do
        问题
        %span.badge
          = @search_results.issues_count
    %li{ class: active_when(@scope == 'merge_requests') }
      = link_to search_filter_path(scope: 'merge_requests') do
        合并请求
        %span.badge
          = @search_results.merge_requests_count
    %li{ class: active_when(@scope == 'milestones') }
      = link_to search_filter_path(scope: 'milestones') do
        里程碑
        %span.badge
          = @search_results.milestones_count
